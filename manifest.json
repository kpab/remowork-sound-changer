{
  "manifest_version": 3,
  "name": "Remowork Sound Changer",
  "version": "1.2.0",
  "description": "Remoworkの着信音・通知音をカスタマイズ",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "permissions": [
    "storage",
    "tabCapture",
    "offscreen"
  ],
  "host_permissions": [
    "https://stage.remowork.biz/*",
    "https://remowork.biz/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://stage.remowork.biz/*",
        "https://remowork.biz/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://stage.remowork.biz/*",
        "https://remowork.biz/*"
      ],
      "js": ["hand-sign-detector.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js",
        "virtual-camera.js",
        "sounds/*/*",
        "lib/mediapipe/*"
      ],
      "matches": ["https://stage.remowork.biz/*", "https://remowork.biz/*"]
    }
  ]
}
